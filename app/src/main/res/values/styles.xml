<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#66092D</item>
        <item name="colorPrimaryDark">#66092D</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionButton_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/borde_redondo</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">italic</item>
    </style>

<!-- Style para INVENTORY -->

    <style name="InventoryTheme" parent="Base.AppTheme"/>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#66092D</item>
        <item name="colorPrimary">#DBB5C4</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>


</resources>
